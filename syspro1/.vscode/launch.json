    "version": "0.2.0",
    "configurations": [
        {
            "name": "WSL C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/c/Workspaces/syspro/minisearch",
            "args": [
                "-fThreading"
            ],
            "stopAtEntry": false,
            "cwd": "/mnt/c/Workspaces/syspro",
            "environment": [],
            "externalConsole": true,
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "pipeTransport": {
                "pipeCwd": "",
                "pipeProgram": "c:\\windows\\sysnative\\bash.exe",
                "pipeArgs": [
                    "-c"
                ],
                "debuggerPath": "/usr/bin/gdb"
            },
            "sourceFileMap": {
                "/mnt/c": "c:\\"
            }
        }
    ]
}